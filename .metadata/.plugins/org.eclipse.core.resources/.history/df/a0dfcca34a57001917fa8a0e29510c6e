import java.util.Random;

public class Enemy {
	String name = "";
	int hp = 0;
	int dp = 0;
	int property = 0;
	String[] namearr = {"JS","JW","SC","BK","SY"};
//	String 
	
	
	
	
	Random random = new Random();
	Enemy() {
		int a = random.nextInt(5);
		this.name = namearr[a];
		this.hp = random.nextInt(151)+80;
		this.dp = random.nextInt(16)+8;
		this.property = random.nextInt(2);
	}
	
	public boolean status() {
			if (hp > 0) {
				// 살앗다
				return true;
			}
			// 죽엇다
			return false;
		}
		
		public void beUnderAttack() {
			Random rand = new Random();
			int hitNumber = rand.nextInt(5);
			
			if (hitNumber == 4) {
				
				hp = hp - 10;
				System.out.println(this.name + " : 아프거든? (-10)");
			} else {
				System.out.println(this.name + " : 쇼쇼쇽");
			}
		}

}
