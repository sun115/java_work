import java.util.Random;

public class Player {
	String name = "";
	int hp = 0;
	
	public boolean status() {
		if (hp > 0) {
			// 살앗다
			return true;
		}
		// 죽엇다
		return false;
	}
	
	public void attack() {
		Random rand = new Random();
		int hitNumber = rand.nextInt(100);
		// 100분의 1의 확률로 공격받게 해보자
		if (hitNumber == 99) {
			hp = hp - 10;
			System.out.println("아야! (-10)");
		} else {
			System.out.println("슈슉");
		}
		
	}

}
