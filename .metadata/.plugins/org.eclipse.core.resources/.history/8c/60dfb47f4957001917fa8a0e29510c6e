import java.util.Random;

public class Enemy {
	String name = "";
	int hp = 0;
	Enemy(String name, int hp){
		this.name = name;
		this.hp = hp;
	}
	
	public boolean status() {
			if (hp > 0) {
				// 살앗다
				return true;
			}
			// 죽엇다
			return false;
		}
		
		public void beUnderAttack() {
			Random rand = new Random();
			int hitNumber = rand.nextInt(5);
			if (hitNumber == 4) {
				hp = hp - 10;
				System.out.println(this.name + " : 아프거든? (-10)");
			} else {
				System.out.println(this.name + " : 쇼쇼쇽");
			}
		}

}
