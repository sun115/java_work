import java.util.Arrays;
import java.util.Scanner;


public class Game01 {
	public static void main(String[] args) {
		Player player = new Player("폴",100);
		
		Enemy[] enemy = new Enemy[5];
		enemy[0] = new Enemy();
		enemy[1] = new Enemy();
		enemy[2] = new Enemy();
		enemy[3] = new Enemy();
		enemy[4] = new Enemy();
		
		

		
		Scanner scanner = new Scanner(System.in);
		System.out.println("엔터를 누르면 턴이 진행됩니다.");
		for (int i=0; i<10000; i++) {
			scanner.nextLine();
			
			// 적에게 공격!
			for(int j=0; j<enemy.length; j++) {

				if (enemy[j].status()) {
					enemy[j].beUnderAttack();
				}
			}
			
			boolean noneDefeat = false;

			for (int j=0; j<enemy.length; j++) {
				if(enemy[j].status()){
					noneDefeat = true;
				}
			}
			if (!noneDefeat) {
				System.out.println("적 전멸. WIN");
				break;
			}

//			적이 한 명일 경우!
//			
//			e1.beUnderAttack();
//			if (e1.status()) {
//				
//			}else {
//				System.out.println("적이 파괴되엇읍니다. 승 리 ! ^^");
//			}
						
			
			player.beUnderAttack();
			if (player.status()) {
				
			} else {
				System.out.println("당신은 패배했다.");
			}
			
			
		}
	}

}
