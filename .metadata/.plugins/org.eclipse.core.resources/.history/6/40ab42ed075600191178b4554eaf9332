// 입력받은 10진수를 8진수로 바꿔 출력하는 메소드 만들기
import java.util.Scanner;

public class Pow {
		int inputNum;
//		int 나머지;
//		int 나눈값;
		
//		Integer.toString(나머지)
		
	public int change () {
		Scanner scan = new Scanner(System.in);
		this.inputNum = scan.nextInt();
		
		while(true) {
			int 나눈값 = 0;
			int 나머지 = 0;
			this.inputNum = 나눈값;
			
			int[] arr;
			
			int index;
				
			if (나눈값>=8) {
				나머지 = this.inputNum % 8;
				나눈값 = this.inputNum/8;
				
				
				System.out.println(나눈값+" "+나머지);
				
				
			} else {
				return 나눈값;
			}
		
		}
//		System.out.println();
	}


