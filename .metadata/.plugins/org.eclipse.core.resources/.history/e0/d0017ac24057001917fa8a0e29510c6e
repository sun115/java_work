import java.util.Scanner;

public class Game01 {
	public static void main(String[] args) {
		Player player = new Player();
		Enemy e1 = new Enemy();
		player.hp = 100;
		e1.hp = 100;
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("엔터를 누르면 턴이 진행됩니다.");
		for (int i=0; i<10000; i++) {
			scanner.nextLine();
			
			e1.beUnderAttack();
			if (e1.status()) {
				
			}else {
				System.out.println("적이 파괴되엇읍니다. 승 리 ! ^^");
			}
						
			
			player.beUnderAttack();
			if (player.status()) {
				
			} else {
				System.out.println("당신은 패배했다.");
			}
			
			
		}
	}

}
